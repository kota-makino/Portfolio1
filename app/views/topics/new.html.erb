<div class="topic-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Picture</h1>
        <%= form_for @topic do |f| %>
          <div class="form_group">
            <%= f.label :image %>
            <%= f.file_field :image %>
          </div>

          <div class="form_group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
           <%= f.submit '投稿', class: 'btn-black btn-block' %>
        <% end %>
          <%= link_to 'Log out', logout_path, method: :delete , class: 'btn-block btn-white' %>
      </div>
    </div>
  </div>
</div>
