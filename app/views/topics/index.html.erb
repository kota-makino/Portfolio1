<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <% if !topic.favorite_users.include?(current_user) %>
             <%= link_to favorites_path(topic_id: topic.id),method: :post do %>
              <%= icon("far","heart",class:"topic-index-icon") %>
             <% end %>
            <% else %>
             <%= link_to favorites_path(topic_id: topic.id),method: :delete do %>
              <%= icon("fas","heart",class:"topic-index-icon heart") %>
             <% end %>
            <% end %>
            <%= topic.favorites.count %>

            <% if !topic.bookmark_users.include?(current_user) %>
             <%= link_to bookmarks_path(topic_id: topic.id),method: :post do %>
              <%= icon("far","star", class:"topic-index-icon") %>
             <% end %>
            <% else %>
             <%= link_to bookmarks_path(topic_id: topic.id),method: :delete do %>
              <%= icon("fas","star", class:"topic-index-icon star") %>
             <% end %>
            <% end %>
            <%= topic.bookmarks.count %>

            <%= icon("far","comment-dots",class:"topic-index-icon") %>

            <p class="topic-text">
              <%= topic.description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
